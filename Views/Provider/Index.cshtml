@model IEnumerable<OrderProcessingMVC.Models.Provider>

@{
    ViewData["Title"] = "Index";
}

<h1 class="d-flex justify-content-center name-table text-primary">Providers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a class=" btn btn-outline-primary sort Provider" role="button">
                    @Html.DisplayNameFor(model => model.Name)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
